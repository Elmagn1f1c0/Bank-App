@model BankApp.DTO.PaginatedList<BankApp.Models.GetAccountModel>


<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Account List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Account" asp-action="CreateAccount" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create New Account</a>

        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Account Type
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Email
                </th>
                <th>
                    Account Number
                </th>
                <th>
                    Account Balance
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Items.Any())
            {
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.AccountType</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@item.AccountNumberGenerated</td>
                        <td>@item.CurrentAccountBalance</td>
                        <td>
                            <a asp-controller="Account" asp-action="UpdateAccount" asp-route-Id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Account" asp-action="DeleteAccount" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>


                        </td>
                    </tr>
                }
            }
        </tbody>
        @if (Model != null && Model.TotalPages > 1)
        {
            <tfoot>
                <tr>
                    <td colspan="8">
                        <nav aria-label="Transaction navigation">
                            <ul class="pagination justify-content-center">
                                @for (var i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" href="?page=@i">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </td>
                </tr>
            </tfoot>
        }
    </table>
</div>