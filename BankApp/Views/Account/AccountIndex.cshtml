@model BankApp.DTO.PaginatedList<BankApp.Models.GetAccountModel>

<style>
    body {
        background: linear-gradient(125deg, #90ee90 50%, #fffdd0 50%);
        font-family: Arial, sans-serif;
    }

    .container {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .text-primary {
        color: #31708f;
    }

    .table {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .bg-primary {
        background-color: #428bca;
    }

    .text-white {
        color: #fff;
    }

    .pagination .page-link {
        color: #428bca;
        border-color: #428bca;
    }

    .pagination .page-item.active .page-link {
        background-color: #428bca;
        border-color: #428bca;
    }
</style>

<div class="container mt-4 bg-danger-subtle p-4 rounded">
    <div class="row">
        <div class="col">
            <h1 class="text-primary">Account List</h1>
        </div>
        <div class="col text-end">
            <a asp-controller="Account" asp-action="CreateAccount" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill me-2"></i>Create New Account</a>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="border p-4 bg-light rounded">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Account Type</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Account Number</th>
                        <th>Account Balance</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Items.Any())
                    {
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.AccountType</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>@item.AccountNumberGenerated</td>
                                <td>@item.CurrentAccountBalance</td>
                                <td>
                                    <a asp-controller="Account" asp-action="UpdateAccount" asp-route-Id="@item.Id" class="btn btn-success me-2"><i class="bi bi-pencil-square"></i></a>
                                    <a asp-controller="Account" asp-action="DeleteAccount" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        @if (Model != null && Model.TotalPages > 1)
        {
            <div class="mt-3">
                <nav aria-label="Transaction navigation">
                    <ul class="pagination justify-content-center">
                        @for (var i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

