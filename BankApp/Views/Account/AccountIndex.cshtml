@model PaginatedList<GetAccountModel>



<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-dark py-2">Account List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">

            <div class="col-12 text-end">
                <a asp-controller="Account" asp-action="CreateAccount" class="btn btn-outline-primary">
                    <i class="bi bi-plus-circle"></i>Create New Account
                </a>
            </div>
        </div>


        <div class="container mt-3">
            <div class="border p-4 bg-light rounded">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="bg-primary text-white">
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Account Type</th>
                                <th>Phone Number</th>
                                <th>Email</th>
                                <th>Account Number</th>
                                <th>Account Balance</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Items.Any())
                            {
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.AccountType</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Email</td>
                                        <td>@item.AccountNumberGenerated</td>
                                        <td>@item.CurrentAccountBalance</td>
                                        <td>
                                            <a asp-controller="Account" asp-action="UpdateAccount" asp-route-Id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                                            <a asp-controller="Account" asp-action="DeleteAccount" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model != null && Model.TotalPages > 1)
                {
                    <div class="mt-3">
                        <nav aria-label="Transaction navigation">
                            <ul class="pagination justify-content-center">
                                @for (var i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" href="?page=@i">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

