@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sterling Bank</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
               
                <a class="navbar-brand" href="#">ElMagnifico Bank</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login"> Get started</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <section class="banner text-center py-5">
            <h1>Welcome to ElMagnifico Bank</h1>
            <p>Your trusted banking partner</p>
        </section>

        <section class="services py-5">
            <div class="container">
                <h2 class="text-center mb-4">Our Services</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="service-item mb-4">
                            <h3>Online Banking</h3>
                            <p>Manage your accounts online</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="service-item mb-4">
                            <h3>Loans</h3>
                            <p>Explore our flexible loan options</p>
                        </div>
                    </div>
                    <!-- Add more service items with appropriate columns -->
                </div>
            </div>
        </section>

       
    </main>

    <footer class="bg-dark text-light py-3">
        <div class="container text-center">
            <p>&copy; 2023 Elmagnifico Bank. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>




